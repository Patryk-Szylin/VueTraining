@{
    ViewData["Title"] = "Home Page";
}


@*@Html.Partial("Partials/LeaderBoard")*@


<div id="app" class="row">
    <div class="entries-container">
        <div v-for="entry in entriesData">
            <div class="clock-container">
                <div class="clock-info">
                    <div class="entry-title">
                        <h1>{{entry.date }}</h1>
                    </div>
                    <div>
                        <div class="entry-prizePool">
                            Total prize pool <span class="prize-label">£{{entry.totalPrizePool.toLocaleString()}}</span>
                        </div>
                    </div>
                </div>
                <div class="clock-timerContainer">
                    <div class="clock-col clock-startsIn">
                        <p>Starts in </p>
                    </div>
                    <div class="clock-col">
                        <h4 class="clock-hours clock-timer"></h4>
                        <p class="clock-label">
                            Hours
                        </p>
                    </div>
                    <div class="clock-col">
                        <h4 class="clock-minutes clock-timer"></h4>
                        <p class="clock-label">
                            Minutes
                        </p>
                    </div>
                    <div class="clock-col">
                        <h4 class="clock-seconds clock-timer"></h4>
                        <p class="clock-label">
                            Seconds
                        </p>
                    </div>
                </div>
            </div>
            <div class="entries-content ">
                <div class="col-lg-4">
                    <div class="panel-container">
                        <h1>
                            <svg class="ico-cup">
                                <use xlink:href="#people"></use>
                            </svg>
                            Participants <span class="player-number"> {{entry.players.length}}</span>
                        </h1>
                        <div class="players-list">
                            <ol>
                                <li v-for="player in entry.players">
                                    <mark>{{player.name}}</mark>
                                </li>
                            </ol>
                        </div>

                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="panel-container prizes-container">
                        <h1>
                            <svg class="ico-cup">
                                <use xlink:href="#cup"></use>
                            </svg>
                            Prizes
                        </h1>
                        <div class="standings-container">
                            <ol>
                                <li class="standing-element no-hover elem" v-for="recipient in entry.standings">
                                    <mark v-if="recipient.proportion > 0">
                                        {{recipient.recipientLabel}}  
                                        <span class="reward-price-label"> £{{Math.round((entry.totalPrizePool / recipient.noRecipients) * recipient.proportion / 7).toLocaleString()}}</span>
 
                                    </mark>
                                    <mark v-else>
                                        {{recipient.recipientLabel}}
                                        <span class="reward-price-label"> <span class="in-game-rewards-label">In-Game Rewards worth </span>£{{recipient.proportion.sellingPrice}} </span>

                                    </mark>
                                </li>
                            </ol>

                        </div>
                    </div>
                </div>


                @*<div class="col-lg-4">
                        <h2>
                            <svg class="ico-cup">
                                <use xlink:href="#cup"></use>
                            </svg>
                            Prizes
                        </h2>
                        <div class="standings-container">

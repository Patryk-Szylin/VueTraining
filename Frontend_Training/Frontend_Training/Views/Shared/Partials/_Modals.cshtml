        "Olie Shaw",
        "Cecelia Byrd",
        "Larry Aguilar",
        "Micheal Berry",
        "Forest",
        "Thomas Griffith",
        "James Mills",
        "Lettie Henry",
        "Todd Love",
        "Lenora Peters",
        "Daniel Murphy",
        "Eleanor McLaughlin",
        "Ernest Ortiz",
        "Tom Gordon",
        "Alvin Hubbard",
        "Rebecca Pittman",
        "Birdie Newton",
        "Iva McCormick",
        "Ophelia Summers",
        "Scott Lopez",
        "Marie Maxwell",
        "Steve Baldwin"
    };

    List<string> playerNames = new List<string>
    {
        "Gussie Sandoval",
        "Bill Harvey",
        "Willie Allison",

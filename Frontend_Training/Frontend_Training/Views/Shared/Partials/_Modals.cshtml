    };


    List<int> listOfSlots = new List<int>
    {
        1,
        2,
        3,
        4,
        5
    };


}



<div id="myModal" class="cont_principal">
    <div class="cont_princ_lists">
        <div class="modal-tabs">
            <div class="modal-button" data-val="tab-investors">
                <div class="modal-icon">
                    <svg class="ico-cup">
                        <use xlink:href="#people"></use>
                    </svg>
                </div>
                <div>
                    Investors (@(investorNames.Count))
                </div>
            </div>
            <div class="modal-button" data-val="tab-players">
                <div class="modal-icon">
                    <svg class="ico-cup">
                        <use xlink:href="#people"></use>
                    </svg>
                </div>
                <div>
                    Players (@(playerNames.Count))
                </div>
            </div>
            <div id="modal-close" class="modal-button">
                <div class="modal-icon">
                    <svg class="ico-cup">
                        <use xlink:href="#close"></use>
                    </svg>
                </div>
            </div>
        </div>
        <div id="tab-investors" class="tabContent investors-list">
            @for (int i = 0; i < investorNames.Count; i++)
            {
                Random generator = new Random();
                var randomSlotNumber = generator.Next(1, listOfSlots.Count - 1);
                <div class="investor-element list_shopping li_num_0_1">
                    <div class="col_md_1_list">
                        <p>AVAILABLE</p>
                    </div>
                    <div class="col_md_2_list">
                        <h4>@investorNames[i]</h4>
                        <p>HAS <span style="color: #7cfc00;">@randomSlotNumber</span> MORE SLOTS</p>
                    </div>
                    <div class="col_md_3_list">
                        @Html.Partial("Partials/_SubmitButton")
                    </div>
                </div>
            }
        </div>
        <div id="tab-players"class="tabContent investors-list">
            @for (int i = 0; i < playerNames.Count; i++)
            {
                Random generator = new Random();
                var randomMoney = generator.Next(500, 50000);

                <div class="investor-element list_shopping li_num_0_1">
                    <div class="col_md_1_list">
                        <p>AVAILABLE</p>
                    </div>
                    <div class="col_md_2_list">
                        <h4>@playerNames[i]</h4>
                        <p> TOTAL EARNINGS - <span style="color: #F26856;">@randomMoney.ToString("C0", CultureInfo.CurrentCulture)</span></p>
                    </div>
                    <div class="col_md_3_list">
                        @Html.Partial("Partials/_SubmitButton")
                    </div>
                </div>
            }
        </div>
    </div>
</div>
